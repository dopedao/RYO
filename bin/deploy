#!/bin/bash
set -eu

# For each contract compiled with bin/compile, deploy and record the
# deployment address.

01_DopeWars=$(starknet deploy --contract artifacts/compiled/01_DopeWars.json \
    --network=alpha)
echo -e "\n01_DopeWars: ${01_DopeWars}"
01_DopeWarsAddress=$(echo -e ${01_DopeWars} | grep -o '\b0x\w*' )

MarketMaker=$(starknet deploy --contract artifacts/compiled/MarketMaker.json \
    --network=alpha)
echo -e "\nMarketMaker: ${MarketMaker}"
MarketMakerAddress=$(echo -e ${MarketMaker} | grep -o '\b0x\w*' )

UserRegistry=$(starknet deploy --contract artifacts/compiled/UserRegistry.json \
    --network=alpha)
echo -e "\nUserRegistry: ${UserRegistry}"
UserRegistryAddress=$(echo -e ${UserRegistry} | grep -o '\b0x\w*' )

Account=$(starknet deploy --contract artifacts/compiled/Account.json \
    --network=alpha)
echo -e "\nAccount: ${Account}"
AccountAddress=$(echo -e ${Account} | grep -o '\b0x\w*' )

Combat=$(starknet deploy --contract artifacts/compiled/Combat.json \
    --network=alpha)
echo -e "\nCombat: ${Combat}"
CombatAddress=$(echo -e ${Combat} | grep -o '\b0x\w*' )


